<%= form_for @publication, url: [@publication], html: {class: 'form-horizontal'} do |form| %>

<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <% if @publication.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @publication.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="row">

        <div class="col-md-12">
            <%= form.label :title, "Titre" %>
            <%= form.text_field :title, class: 'form-control' %>
            <%= form.label :body, "Description" %>
            <%= form.rich_text_area :body, class: 'form-control', :style => "min-height:10em;overflow:hidden;overflow-y: scroll;text-align:left;"  %>

          <%= form.label :image, "Image" %>
          <%= form.file_field :image, class: 'form-control' %>
          <% unless publication.new_record? %>
          <%= image_tag publication.image, :style => "width:300px;height:300px;" %>
          <% end %>
        </div>

      </div>

      <div class="actions" style="padding:20px">
        <%= form.submit "Valider la publication", :class => "btn btn-lg btn-success" %>
      </div>

    </div>
  </div>

</div>
<% end %>
